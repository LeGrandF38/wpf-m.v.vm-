<Window x:Class="Demo2.View.DataEntry.SalleDataEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo2.View.DataEntry"
        mc:Ignorable="d"
        Title="SalleDataEntry" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Numero de Salle" HorizontalAlignment="Left" Margin="223,173,0,0" VerticalAlignment="Top" Height="31" Width="152"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="15,173,0,0" TextWrapping="Wrap" Text="{Binding Number}" VerticalAlignment="Top" Width="154" Height="31"/>
        <Button Content="Enregistrer" HorizontalAlignment="Left" Margin="289,243,0,0" VerticalAlignment="Top" Height="30" Width="76"/>
        <Button Content="Annuler" HorizontalAlignment="Left" Margin="27,243,0,0" VerticalAlignment="Top" Height="30" Width="76" Grid.Column="1" Click="Button_Click"/>

    </Grid>
</Window>
